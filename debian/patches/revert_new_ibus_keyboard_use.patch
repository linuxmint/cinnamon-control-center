+				  chooser_dialog);
+
+	g_signal_connect (G_OBJECT (xkb_layout_filter), "icon-release",
+			  G_CALLBACK (xkb_layout_filter_clear), NULL);
+
+	selection =
+	    gtk_tree_view_get_selection (GTK_TREE_VIEW
+					 (xkb_filtered_layouts_list));
+
+	g_signal_connect (G_OBJECT (selection),
+			  "changed",
+			  G_CALLBACK
