+
+/* Resets the seletion counter in the expander (static current_expander) */
+static void
+xkb_options_expander_selcounter_reset (void)
+{
+	g_object_set_data (G_OBJECT (current_expander), SELCOUNTER_PROP,
+			   GINT_TO_POINTER (0));
